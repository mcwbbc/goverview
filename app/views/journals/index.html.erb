<% title "of the journals in the current GOverview dataset" %>

<div class="column-left">
	<div class="display rounded">
		JOURNALS
		<h2 class="display-title">TOTAL JOURNALS IN THE DATABASE</h2>
		<div class="line"></div>
		<div class="single_number">
			<%= number_with_delimiter(@journal_count) %>
		</div>
		<h2 class="display-title">OPEN ACCESS</h2>
		<div class="line"></div>
		<div class="single_number">
			<%= number_with_delimiter(@oa_journal_count) %>
		</div>
  </div>
</div>

<div class="column-right">
	<div class="display rounded">
		MOST POPULAR
		<h2 class="display-title">ORDERED BY NUMBER OF CURATED PUBLICATIONS</h2>
		<div class="line"></div>
		<div class="ordered_list">
			<ol>
				<% @top_journals.each do |j| %>
				<li><%= link_to(j.abbrev_title, journal_url(j)) %>
					<% if j.open_access != "no" && j.open_access != "0" %>
					<%= image_tag("OA-icon.gif", :alt => "OA", :title => "Open Access: #{j.open_access}") %>
					<% end %>
					: <%= j.total %></li>
					<% end %>
			</ol>
		</div>
	</div>
</div>
