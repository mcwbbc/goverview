<% title "of the journal #{@journal.abbrev_title}" %>

<div class="column-left">
	<div class="display rounded">
		<%= @journal.abbrev_title %>
		<h2 class="display-title">NUMBER OF PUBLICATIONS USED</h2>
		<div class="line"></div>
		<div class="single_number">
			<%= number_with_delimiter(@journal.publications.size) %>
		</div>
	</div>
</div>

<div class="column-right">
	<div class="display rounded">
		ANNOTATIONS
		<h2 class="display-title">MOLECULAR FUNCTION</h2>
		<div class="line"></div>
		<div class="single_number">
			<%= number_with_delimiter(@journal_annotations['F']) %>
		</div>

		<h2 class="display-title">BIOLOGICAL PROCESS</h2>
		<div class="line"></div>
		<div class="single_number">
			<%= number_with_delimiter(@journal_annotations['P']) %>
		</div>

		<h2 class="display-title">CELLULAR COMPONENT</h2>
		<div class="line"></div>
		<div class="single_number">
			<%= number_with_delimiter(@journal_annotations['C']) %>
		</div>
	</div>
</div>
